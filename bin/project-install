#!/usr/bin/env bash

function main(){
  local path="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
  local PROJECT_TITLE="Bash Project"
  local positional=()
  while [[ $# -gt 0 ]]; do
    local key="$1"
    case $key in
      -t|--title)
        local PROJECT_TITLE="$2"
        shift; shift # past arguments
        ;;
      -h|--help|-*|--*)
        shift # past argument
        ${path}/project-help install "$*"
        return
        ;;
      *)    # unknown option
        positional+=("$1") # save it in an array for later
        shift # past argument
        ;;
    esac
  done

  local path="$( pwd )"
  local bin="$path/bin"
  local local="$path/local/bin"
  local start="$path/project-start"
  local start_cmd="$path/project-start.cmd"

  if [ ! -d "$bin" ]; then
    mkdir "$bin"
  fi

  if [ ! -d "$local" ]; then
    mkdir -p "$local"
  fi

    cat << EOF > $start
#!/usr/bin/env bash
vendor/bin/project start --title "$PROJECT_TITLE"
EOF

    cat << EOF > $start_cmd
@ECHO OFF
%~dp0\bin\project-start.cmd "$PROJECT_TITLE"
EOF

}

main "$@"

unset -f main